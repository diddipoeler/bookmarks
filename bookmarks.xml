	</media>
-->
	
	<languages folder="site">
		<language tag="de-DE">language/de-DE/de-DE.com_bookmarks_diddipoeler.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_bookmarks_diddipoeler.ini</language>
	</languages>
	
  <media destination="com_bookmarks_diddipoeler" folder="media/com_bookmarks_diddipoeler">
		<filename>index.html</filename>
	  <filename>ext_tem.png</filename>
	  <filename>ext_com.png</filename>
	  <filename>ext_esp.png</filename>
	  <filename>ext_lang.png</filename>
	  <filename>ext_mod.png</filename>
	  <filename>ext_plugin.png</filename>
	</media>
	
	<administration>
		<!-- Administration Menu Section -->
		<menu img="../administrator/components/com_bookmarks_diddipoeler/assets/icons/transparent_schrift_16.png">COM_BOOKMARKS_DIDDIPOELER_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>bookmarks_diddipoeler.php</filename>
			<filename>controller.php</filename>
			<!-- assets files section -->
			<folder>assets</folder>
			<!-- elements files section -->
			<folder>elements</folder>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>

		</files>
 
		<languages folder="admin">
			<language tag="de-DE">language/de-DE/de-DE.com_bookmarks_diddipoeler.ini</language>
			<language tag="de-DE">language/de-DE/de-DE.com_bookmarks_diddipoeler.sys.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_bookmarks_diddipoeler.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_bookmarks_diddipoeler.sys.ini</language>
			</languages>
		
	</administration>
 






     
</extension>
